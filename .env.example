# ============================================================================
# ENVIRONMENT VARIABLES - MEU SaaS CHATBOT
# ============================================================================
# Copy this file to .env.local and fill in the values
# ============================================================================

# ============================================================================
# NEXT.JS
# ============================================================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ============================================================================
# SUPABASE - Main Database (Auth + Connections)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=your_main_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_main_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_main_supabase_service_role_key

# ============================================================================
# SUPABASE - Chat Database (Messages + Conversations)
# ============================================================================
NEXT_PUBLIC_CHAT_SUPABASE_URL=your_chat_supabase_url
NEXT_PUBLIC_CHAT_SUPABASE_ANON_KEY=your_chat_supabase_anon_key
CHAT_SUPABASE_SERVICE_ROLE_KEY=your_chat_supabase_service_role_key

# ============================================================================
# UAZAPI - WhatsApp API
# ============================================================================
UAZAPI_BASE_URL=https://swiftbot.uazapi.com
UAZAPI_ADMIN_TOKEN=your_uazapi_admin_token

# ============================================================================
# OPENAI - Transcription and AI Processing
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# ============================================================================
# WEBHOOK AUTHENTICATION (Optional)
# ============================================================================
# Basic auth for webhook endpoint security
WEBHOOK_AUTH_USER=your_webhook_username
WEBHOOK_AUTH_PASS=your_webhook_password

# ============================================================================
# STRIPE (Payment Processing)
# ============================================================================
STRIPE_SECRET_KEY=your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ============================================================================
# EMAIL (NodeMailer)
# ============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password
EMAIL_FROM=your_email@gmail.com
